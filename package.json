{
  "name": "api-node",
  "version": "1.0.0",
  "description": "API Boilerplate",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "npm run build -- --watch",
    "start": "node dist/main/index.js",
    "dev": "nodemon -L --watch './dist/**/*.js' ./dist/main/index.js",
    "start:dev": "concurrently --kill-others \"npm run build:watch\" \"nodemon run dev\"",
    "test": "jest  --passWithNoTests --detectOpenHandles --runInBand --no-cache",
    "test:staged": "npm run test -- --findRelatedTests",
    "test:ci": "npm run test -- --coverage",
    "lint": "eslint --ignore-path .gitignore --ext .ts --fix",
    "prepare": "husky install",
    "up": "concurrently --kill-others \"npm run build:watch\" \"docker-compose up\"",
    "down": "docker-compose down"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@faker-js/faker": "^8.2.0",
    "@types/cors": "^2.8.16",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "concurrently": "^8.2.2",
    "cwd": "^0.10.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.53.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-mysql": "^2.0.0",
    "lint-staged": "^15.0.2",
    "moq.ts": "^10.0.8",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "_moduleAliases": {
    "@domain": "dist/domain",
    "@infrastructure": "dist/infrastructure",
    "@presentation": "dist/presentation",
    "@application": "dist/application",
    "@data": "dist/data",
    "@main": "dist/main",
    "@symboles": "dist/symboles"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run test:staged"
    ]
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "inversify": "^6.0.2",
    "module-alias": "^2.2.3",
    "mysql2": "^3.6.3",
    "reflect-metadata": "^0.1.13"
  },
  "engines": {
    "node": "20.x"
  }
}
